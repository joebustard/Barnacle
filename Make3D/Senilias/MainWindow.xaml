<Window
    x:Class="Senilias.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Senilias"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Senalias Project Builder"
    Width="800"
    Height="450"
    Loaded="Window_Loaded"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="5" />
            <RowDefinition />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" VerticalAlignment="Center">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="Open_Click" />
                <MenuItem Header="Save" Click="Save_Click" />
                <MenuItem Header="Save As" Click="SaveAs_Click" />
                <Separator />
                <MenuItem Header="Exit" Click="Exit_Click" />
            </MenuItem>
        </Menu>
        <TabControl Grid.Row="2">
            <TabItem Header="Edit">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Column="1" Grid.Row="1">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition />
                            <RowDefinition Height="25" />
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <Label VerticalAlignment="Center" Content="Project Folder" Width="100" />
                            <TextBox VerticalAlignment="Center" Text="{Binding ProjectFolder}" Width="400" />
                            <Button Content="..." Margin="4,0,0,0" Click="Browse_Project" Width="25" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="1">
                            <Label VerticalAlignment="Center" Content="Project Name" Width="100" />
                            <TextBox VerticalAlignment="Center" Text="{Binding ProjectName}" Width="400" />
                        </StackPanel>
                        <ListView Grid.Row="2"  ItemsSource="{Binding Targets}" SelectedIndex="{Binding SelectedStep}">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBox Height="40" Width="300" Text="{Binding Source}" AcceptsReturn="True" />
                                        <Button Margin="4,0,0,0" Width="25" Content="..." Click="Browse_Source" Visibility="{Binding BrowserVisible}" />
                                        <TextBox Margin="8,0,0,0" Width="300" Text="{Binding Target}" />
                                        <Button Margin="4,0,0,0" Width="25" Content="..." Click="Browse_Target" Visibility="{Binding BrowserVisible}" />
                                        <TextBox Margin="8,0,0,0" Width="300" Text="{Binding ActionString}" />
                                        <Button Margin="4,0,0,0" Width="25" Content="..." Click="Browse_Action" Visibility="{Binding BrowserVisible}" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <StackPanel Orientation="Horizontal" Grid.Row="3">
                            <Button Width="80" Content="Add File" Margin="0,0,4,0" Click="AddFile_Click" />
                            <Button Width="80" Content="Delete Step" Margin="0,0,4,0" Click="DeleteStep_Click" Visibility="{Binding DeleteStepVisible}" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </TabItem>

            <TabItem Header="Build">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="8.8" />
                        <ColumnDefinition Width="191.2" />
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>

                    <Grid
                        Grid.Row="1"
                        Grid.Column="1"
                        Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition Height="25" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Button
                            Grid.Row="1"
                            Click="Clear_Click"
                            Content="Clear"
                            ToolTip="Clear the output window."
                            Visibility="{Binding ControlsVisible}" />
                        <Button
                            Grid.Row="3"
                            Click="Check_Click"
                            Content="Check"
                            ToolTip="Check what steps will be run without actually running them."
                            Visibility="{Binding ControlsVisible}" />
                        <Button
                            Grid.Row="5"
                            Click="Run_Click"
                            Content="Build"
                            ToolTip="Run the build."
                            Visibility="{Binding ControlsVisible}" />

                        <Button
                            Grid.Row="7"
                            Click="RunAll_Click"
                            Content="Build All"
                            ToolTip="Force a complete build even if targets are not out of date."
                            Visibility="{Binding ControlsVisible}" />
                        <Button
                            Grid.Row="7"
                            Click="StopBuild_Click"
                            Content="Stop"
                            ToolTip="Stop the building."
                            Visibility="{Binding StopVisible}" />
                        <CheckBox Grid.Row="8" Content="Shutdown when finished" IsChecked="{Binding ShutdownOnFinish}" VerticalAlignment="Center" />
                    </Grid>
                    <ScrollViewer Grid.Row="1" Grid.Column="4">
                        <TextBlock
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Background="Black"
                            FontSize="14"
                            Foreground="LightGreen"
                            Text="{Binding RunResults}" />
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>