Program  "Make Part"
{
   Include "libs\limplib.txt" ;
   include "..\scale.txt";
   Include "..\GlobalDefinitions.txt" ;

   // local declarations
   Double partlength = 20 ;
   Double partheight = 20 ;
   Double partwidth = 20 ;
   // define the part name. This will be used to generate the other file names
   String partname = "" ;

   // folder where we'll find the components of the part
   // projectpath is a variable in globaldefinitions.txt
   // basically the full path of the project
   String subpartfolder = projectpath + "\Subparts" ;

   // folder where the part will be saved    
   String outputfolder = projectpath + "\Parts" ;

   // full path of the components file
   String src = subpartfolder + "\" + partname + "SubParts.txt" ;

   // Start building the part
   Solid part = InsertPart( src, partname ) ;
   Resize part, Toscale( partlength) , Toscale( partheight) , Toscale( partwidth)  ;

   // save the part we made
   Savepartmodel( part, outputfolder, partname ) ;
}
