<Defs>
  <!--   Basic Template -->
  <ProjectDefinition Name="Basic">
    <Description>
      Creates a basic folder structure to save the new model.
      The folders are
      /docs
      A place to store documentation such as design notes and build instructions
      /images
      A place to save any image files that will be used to create the model
      /export
      A place to save any STL files exported from the project
      /gcode
      A place to save 3D Printer files created by the external slicer.
      /scripts
      A place to save any limpet scripts
      These folders are simply placeholders. Nothing is created in them.
    </Description>
    <Folder Name="images" Explorer="True" Clean="False" />

    <Folder Name="export" Explorer="False" Clean="True" />
    <Folder Name="gcode" Explorer="False" Clean="True" />
    <Folder Name="scripts" Explorer="True" Clean="False" />
    <Folder Name="docs">
      <File Name="BillOfMaterials.docx" Source="templates/bom.docx" />
    </Folder>
  </ProjectDefinition>

  <!--  Tank Model Template -->
  <ProjectDefinition Name="Tank Model">
    <Description>
      Creates a  folder structure with empty 1/35 scale models for a typical tank model kit.
      The folders are
      /assemblies
      A place to store sub assembly models
      /backup
      A place to store backups of the parts as they are developed
      /docs
      A place to store documentation such as design notes and build instructions
      /images
      A place to save any image files that will be used to create the model
      /export
      A place to save any STL files exported from the project
      /gcode
      A place to save 3D Printer files created by the external slicer.
      /scripts
      A place to save any limpet scripts
    </Description>

    <Folder Name="." Explorer="True" Clean="False">
      <File Name="Tank.mpf" Source="templates/tankproject.txt" />
      <File Name="Hull.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="Turrent.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="LeftRunningGear.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="RightRunningGear.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="Engine.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="Weapons.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="Wheels.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="DoorsAndHatches.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="Suspension.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="Lights.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="Details.txt" Source="templates/blankmodel1_35.txt" />
    </Folder>
    <Folder Name="assemblies" Explorer="True" Clean="False">
      <File Name="HullAssembly.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="TurrentAssembly.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="LeftRunningGearAssembly.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="RightRunningGearAssembly.txt" Source="templates/blankmodel1_35.txt" />
      <File Name="EngineAssembly.txt" Source="templates/blankmodel1_35.txt" />
    </Folder>
    <Folder Name="backup" Explorer="False" Clean="False" />
    <Folder Name="docs" Explorer="False" Clean="False">
      <File Name="BillOfMaterials.xlsx" Source="templates/tankbom.xlsx" />
      <File Name="BuildInstructions.docx" Source="templates/TankBuildInstructions.docx" />
    </Folder>
    <Folder Name="images" Explorer="True" Clean="False" />
    <Folder Name="export" Explorer="False" Clean="True" />
    <Folder Name="gcode" Explorer="False" Clean="True" />
    <Folder Name="scripts" Explorer="True" Clean="False" />
  </ProjectDefinition>

