<UserControl
    x:Class="Barnacle.UserControls.VoxelGridControl.PointGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Barnacle.UserControls.VoxelGridControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Focusable="True"
    KeyDown="UserControl_PreviewKeyDown"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <Grid PreviewKeyDown="UserControl_PreviewKeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Border
            Grid.Row="0"
            BorderThickness="4,4,4,1"
            Style="{StaticResource ControlBorder}">
            <StackPanel Orientation="Horizontal">

                <Border x:Name="ViewVoxelBorder" BorderThickness="4" CornerRadius="2">

                    <Button  Click="ViewVoxelButton_Click"  Style="{StaticResource SmallButton}"   ToolTip="View Only">
                        <Image Source="/Barnacle;component/Images/Buttons/SeeAllPoints.png" ToolTip="View Only" />
                    </Button>
                </Border>

                <Border
                    x:Name="AddVoxelBorder"
                    BorderThickness="4"
                    CornerRadius="2">
                    <Button
                        x:Name="AddVoxelButton"
                        Click="AddVoxelButton_Click"
                        Style="{StaticResource SmallButton}"
                        ToolTip="Add points by clicking on the floor or another voxel">
                        <Image Source="/Barnacle;component/Images/Buttons/Plus.png" ToolTip="Add points by clicking on the floor or another points" />
                    </Button>
                </Border>

                <Border
                    x:Name="DelVoxelBorder"
                    BorderThickness="4"
                    CornerRadius="2">
                    <Button
                        x:Name="DelVoxelButton"
                        Click="DelVoxelButton_Click"
                        Style="{StaticResource SmallButton}"
                        ToolTip="Delete points by clicking on them">
                        <Image Source="/Barnacle;component/Images/Buttons/Minus.png" ToolTip="Delete Voxels by clicking on them" />
                    </Button>
                </Border>
                <Button
     x:Name="CentreVoxelButton"
     Click="CentreVoxelButton_Click"
     Style="{StaticResource SmallButton}"
     ToolTip="Centre all points">
                    <Image Source="/Barnacle;component/Images/Buttons/Centre.png" ToolTip="Centre all the points" />
                </Button>
            </StackPanel>
        </Border>
        <Border
            Grid.Row="1"
            BorderThickness="4,4,4,1"
            Style="{StaticResource ControlBorder}">
            <Grid>

                <Viewport3D
                    Name="viewport3D1"
                    MouseDown="Viewport_MouseDown"
                    MouseMove="Viewport_MouseMove"
                    MouseUp="Viewport_MouseUp"
                    MouseWheel="Viewport_MouseWheel">

                    <Viewport3D.Camera>
                        <PerspectiveCamera
                            x:Name="camMain"
                            LookDirection="{Binding LookDirection}"
                            NearPlaneDistance="25"
                            Position="{Binding CameraPosition}" />
                    </Viewport3D.Camera>

                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <Model3DGroup>
                                <AmbientLight Color="#FF808080" />
                                <DirectionalLight
                                    x:Name="dirLightMain"
                                    Direction="-1,-1,-1"
                                    Color="White" />
                            </Model3DGroup>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>

                    <ModelVisual3D x:Name="MyModel" Content="{Binding ModelContent}" />
                </Viewport3D>
            </Grid>
        </Border>
        <Border
            Grid.Row="2"
            BorderThickness="4,1,4,4"
            Style="{StaticResource ControlBorder}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="60" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="40" />
                    <ColumnDefinition Width="40" />
                </Grid.ColumnDefinitions>
                <CheckBox
                    Grid.Column="0"
                    MaxWidth="50"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Floor"
                    IsChecked="{Binding ShowFloor}" />
                <CheckBox
                    Grid.Column="1"
                    MaxWidth="50"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Content="Axies"
                    IsChecked="{Binding ShowAxies}" />
                <Button
                    Grid.Column="2"
                    MaxWidth="30"
                    Click="Home_Click"
                    Style="{StaticResource ImageButton}"
                    ToolTip="Move the camera to the default front position and point it at the centre.">
                    <Image Source="/Barnacle;component/Images/Buttons/FrontEye.png" />
                </Button>
                <Button
                    Grid.Column="3"
                    MaxWidth="30"
                    Click="Back_Click"
                    Style="{StaticResource ImageButton}"
                    ToolTip="Move the camera to the default back position and point it at the centre.">
                    <Image Source="/Barnacle;component/Images/Buttons/BackEye.png" />
                </Button>
                <Button
                    Grid.Column="4"
                    MaxWidth="30"
                    Click="Left_Click"
                    Style="{StaticResource ImageButton}"
                    ToolTip="Move the camera to the default left position and point it at the centre.">
                    <Image Source="/Barnacle;component/Images/Buttons/RightEye.png" />
                </Button>
                <Button
                    Grid.Column="5"
                    MaxWidth="30"
                    Click="Right_Click"
                    Style="{StaticResource ImageButton}"
                    ToolTip="Move the camera to the default right position and point it at the centre.">
                    <Image Source="/Barnacle;component/Images/Buttons/LeftEye.png" />
                </Button>
                <Button
                    Grid.Column="6"
                    MaxWidth="30"
                    Click="Top_Click"
                    Style="{StaticResource ImageButton}"
                    ToolTip="Move the camera to the default top position and point it at the centre.">
                    <Image Source="/Barnacle;component/Images/Buttons/TopEye.png" />
                </Button>

                <Button
                    Grid.Column="7"
                    MaxWidth="30"
                    Click="Bottom_Click"
                    Style="{StaticResource ImageButton}"
                    ToolTip="Move the camera to the default bottom position and point it at the centre.">
                    <Image Source="/Barnacle;component/Images/Buttons/BottomEye.png" />
                </Button>

                <Button
                    Grid.Column="8"
                    MaxWidth="30"
                    Click="Center_Clicked"
                    Style="{StaticResource ImageButton}"
                    ToolTip="Point the camera at the centre of the world.">
                    <Image Source="/Barnacle;component/Images/Buttons/CenterEye.png" />
                </Button>
                <Button
                    Grid.Column="9"
                    MaxWidth="30"
                    Click="Pan_Clicked"
                    Style="{StaticResource ImageButton}"
                    ToolTip="Pan the camera without changing the look direction">
                    <Image Source="/Barnacle;component/Images/Buttons/PanEye.png" />
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>