<Window
    x:Class="Barnacle.UserControls.GridSettingsDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Barnacle.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Grid Settings"
    Width="250"
    Height="470"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="150" />
            <RowDefinition Height="150" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox
            Grid.Row="0"
            Margin="8,4,8,0"
            Header="Rectangular Grid">
            <UniformGrid
                Margin="8,8,8,8"
                Columns="3"
                Rows="2">
                <RadioButton
                    x:Name="But2Point5"
                    VerticalAlignment="Center"
                    Content="2.5mm"
                    GroupName="RectGrid"
                    IsChecked="{Binding Rect2Point5Checked}" />
                <RadioButton
                    x:Name="But5"
                    VerticalAlignment="Center"
                    Content="5mm"
                    GroupName="RectGrid"
                    IsChecked="{Binding Rect5Checked}" />
                <RadioButton
                    x:Name="But10"
                    VerticalAlignment="Center"
                    Content="10mm"
                    GroupName="RectGrid"
                    IsChecked="{Binding Rect10Checked}" />
                <RadioButton
                    x:Name="But15"
                    VerticalAlignment="Center"
                    Content="15mm"
                    GroupName="RectGrid"
                    IsChecked="{Binding Rect15Checked}" />
                <RadioButton
                    x:Name="But20"
                    VerticalAlignment="Center"
                    Content="20mm"
                    GroupName="RectGrid"
                    IsChecked="{Binding Rect20Checked}" />
                <RadioButton
                    x:Name="But25"
                    VerticalAlignment="Center"
                    Content="25mm"
                    GroupName="RectGrid"
                    IsChecked="{Binding Rect25Checked}" />
            </UniformGrid>
        </GroupBox>
        <GroupBox
            Grid.Row="1"
            Margin="8,8,8,8"
            Header="Polar Grid">
            <StackPanel Orientation="Vertical">
                <UniformGrid
                    MinHeight="80"
                    Margin="8,8,8,0"
                    Columns="2"
                    Rows="2">
                    <RadioButton
                        x:Name="PBut5"
                        VerticalAlignment="Center"
                        Content="5mm"
                        GroupName="PolarGrid"
                        IsChecked="{Binding Polar5Checked}" />
                    <RadioButton
                        x:Name="PBut10"
                        VerticalAlignment="Center"
                        Content="10mm"
                        GroupName="PolarGrid"
                        IsChecked="{Binding Polar10Checked}" />
                    <RadioButton
                        x:Name="PBut15"
                        VerticalAlignment="Center"
                        Content="15mm"
                        GroupName="PolarGrid"
                        IsChecked="{Binding Polar15Checked}" />
                    <RadioButton
                        x:Name="PBut20"
                        VerticalAlignment="Center"
                        Content="20mm"
                        GroupName="PolarGrid"
                        IsChecked="{Binding Polar20Checked}" />
                </UniformGrid>
                <StackPanel Orientation="Horizontal" ToolTip="Polar grid angle in degrees, must be in the range 1 to 120 degrees">
                    <Label VerticalAlignment="Center" Content="Angle" />
                    <TextBox
                        MinWidth="120"
                        Margin="8,0,0,0"
                        Text="{Binding PolarAngle}" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
        <GroupBox
            Grid.Row="2"
            Margin="8,8,8,8"
            Header="Line Style">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="30" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    VerticalAlignment="Center">
                    Line Colour
                </Label>
                <local:ColourPicker
                    x:Name="ColourOfLine"
                    Grid.Column="1"
                    Grid.ColumnSpan="2" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Opacity" />
                <Slider
                    Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Maximum="1"
                    Minimum="0.1"
                    Value="{Binding LineOpacity}" />
                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    VerticalAlignment="Center"
                    Content="Thickness" />
                <Slider
                    Grid.Row="2"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Maximum="10"
                    Minimum="1"
                    Value="{Binding LineThickness}" />
            </Grid>
        </GroupBox>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="4,2,4,2"
                Click="DefaultButton_Click"
                Content="Default" />
            <Button
                Grid.Column="1"
                Margin="4,2,4,2"
                Click="CancelButton_Click"
                Content="Cancel" />
            <Button
                Grid.Column="2"
                Margin="4,2,4,2"
                Click="OKButton_Click"
                Content="OK" />
        </Grid>
    </Grid>
</Window>