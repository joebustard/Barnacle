<UserControl x:Class="Make3D.Dialogs.Figure.ModelAssignmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Make3D.Dialogs.Figure"
             mc:Ignorable="d"
             d:DesignHeight="40" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="150" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label Content="{Binding BoneName}" Grid.Column="1" />
        <ComboBox ItemsSource="{Binding AvailableFigureNames}" SelectedValue="{Binding FigureName}"  Grid.Column="2" />
    </Grid>
</UserControl>