<Window
    x:Class="Barnacle.Dialogs.CircularPasteDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Barnacle.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Circular Paste"
    Width="400"
    Height="250"
    Background="{StaticResource WindowBackBrush}"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Lay on plane" />
            <RadioButton
                x:Name="DirectionX"
                Grid.Column="1"
                VerticalAlignment="Center"
                Content="X"
                GroupName="DirectionGroup"
                IsChecked="True" />

            <RadioButton
                x:Name="DirectionY"
                Grid.Column="2"
                VerticalAlignment="Center"
                Content="Y"
                GroupName="DirectionGroup"
                IsChecked="False" />


            <RadioButton
                x:Name="DirectionZ"
                Grid.Column="3"
                VerticalAlignment="Center"
                Content="Z"
                GroupName="DirectionGroup"
                IsChecked="False" />


        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Rotate" />
            <RadioButton
                x:Name="FaceNone"
                Grid.Column="1"
                VerticalAlignment="Center"
                Content="None"
                GroupName="FaceGroup"
                IsChecked="True" />

            <RadioButton
                x:Name="FaceIn"
                Grid.Column="2"
                VerticalAlignment="Center"
                Content="In"
                GroupName="FaceGroup"
                IsChecked="False" />


            <RadioButton
                x:Name="FaceOut"
                Grid.Column="3"
                VerticalAlignment="Center"
                Content="Out"
                GroupName="FaceGroup"
                IsChecked="False" />
        </Grid>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0">
                Repeats
            </Label>
            <TextBox
                x:Name="RepeatsBox"
                Grid.Column="1"
                Width="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                10
            </TextBox>

        </Grid>
        <Grid Grid.Row="3" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0">
                Radius
            </Label>
            <TextBox
                x:Name="RadiusBox"
                Grid.Column="1"
                Width="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                20
            </TextBox>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0">
                Alternating radius
            </Label>
            <TextBox
                x:Name="AltBox"
                Grid.Column="1"
                Width="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Center">
                0.0
            </TextBox>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="10,4,10,4"
                Click="CancelButtonClicked">
                Cancel
            </Button>
            <Button
                Grid.Column="1"
                Margin="10,4,10,4"
                Click="OkButtonClicked">
                Ok
            </Button>
        </Grid>
    </Grid>
</Window>