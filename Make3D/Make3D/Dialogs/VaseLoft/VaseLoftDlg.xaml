<local:BaseModellerDialog
    x:Class="Barnacle.Dialogs.VaseLoftDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:Barnacle.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Barnacle.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="clr-namespace:Barnacle.UserControls.ObjectViewer"
    Title=""
    Width="1000"
    Height="550"
    Background="{StaticResource WindowBackBrush}"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Style="{StaticResource ControlBorder}">

            <ctrls:FlexiPathEditorControl x:Name="PathEditor" FixedEndPath="True" />
        </Border>
        <GridSplitter
            Grid.Row="0"
            Grid.Column="2"
            Style="{StaticResource GridSplitterStyle}" />
        <Border
            Grid.Row="0"
            Grid.Column="3"
            Style="{StaticResource ControlBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>

                <u:ObjectView
                    x:Name="Viewer"
                    Grid.Row="0"
                    Grid.Column="3" />

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <CheckBox
                        Margin="2,0,16,0"
                        VerticalAlignment="Center"
                        Content="Open"
                        IsChecked="{Binding IsHollow}"
                        ToolTip="If checked, the first segment of the path will be ignored and an open object created" />
                    <Label
                        Margin="4,0,0,0"
                        VerticalAlignment="Center"
                        Content="Thickness"
                        Visibility="{Binding ShowHollowParams}" />
                    <TextBox
                        Margin="4,0,8,0"
                        VerticalAlignment="Center"
                        Text="{Binding SurfaceThickness}"
                        Visibility="{Binding ShowHollowParams}" />
                    <Label Grid.Column="0" VerticalAlignment="Center">
                        Divisions
                    </Label>
                    <Slider
                        x:Name="HDivSlide"
                        MinWidth="200"
                        Margin="8,0"
                        VerticalAlignment="Center"
                        AutoToolTipPlacement="TopLeft"
                        AutoToolTipPrecision="0"
                        Maximum="360"
                        Minimum="3"
                        Value="{Binding NumDivisions}" />

                    <TextBox
                        Width="50"
                        Margin="4,0,0,0"
                        VerticalContentAlignment="Center"
                        FontSize="16"
                        Text="{Binding NumDivisions}" />
                    <TextBox
                        Width="200"
                        Margin="4,0,0,0"
                        VerticalContentAlignment="Center"
                        FontSize="18"
                        Foreground="Red"
                        Text="{Binding WarningText}" />
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="1"
                Margin="2,2,2,2"
                Click="Cancel_Click"
                Content="Cancel" />
            <Button
                Grid.Column="2"
                Margin="2,2,2,2"
                Click="Ok_Click"
                Content="Ok"
                IsDefault="True" />
        </Grid>
    </Grid>
</local:BaseModellerDialog>