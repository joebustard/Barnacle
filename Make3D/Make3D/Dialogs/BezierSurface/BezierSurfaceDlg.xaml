<local:BaseModellerDialog x:Class="Make3D.Dialogs.BezierSurfaceDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Make3D.Dialogs"
        mc:Ignorable="d"
        Title="Bezier Surface" Height="450" Width="800" Loaded="Window_Loaded" WindowStartupLocation="CenterOwner" Background="{StaticResource WindowBackBrush }" MouseDown="Grid_MouseDown"  KeyDown="Grid_KeyDown">
    <Grid x:Name="MainGrid" VerticalAlignment="Stretch" Focusable="True" KeyDown="Grid_KeyDown">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Grid.Row="0">

            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
                <RowDefinition Height="25" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <Label VerticalAlignment="Center" Width="100">Thickness</Label>
                <Slider VerticalAlignment="Center" Value="{Binding SurfaceThickness}" Minimum="1" Maximum="100" Width="200" />
                <TextBox x:Name="ThickBox" Text="{Binding SurfaceThickness}" Width="50" />
            </StackPanel>
            <StackPanel Grid.Row="3" Orientation="Horizontal">
                <Label VerticalAlignment="Center" >Reset Control Points</Label>
                <Button Margin="4,0,0,0" Click="ResetControlPoints_Click">Flat</Button>
                <Button Margin="4,0,0,0" Click="ResetControlPointsDisk_Click">Disk</Button>
                <Button Margin="4,0,0,0" Click="ResetControlPointsBow_Click">Bow</Button>
            </StackPanel>
            <StackPanel Grid.Row="5" Orientation="Horizontal">
                <Label Width="80" VerticalAlignment="Center" >Bend Up</Label>
                <Button Margin="4,0,0,0" Click="UpX_Click">X</Button>
                <Button Margin="4,0,0,0" Click="UpZ_Click">Z</Button>
                <Button Margin="4,0,0,0" Click="UpXZ_Click">X+Z</Button>
                <Button Margin="4,0,0,0" Click="UpDiag1_Click">Diag 1</Button>
                <Button Margin="4,0,0,0" Click="UpDiag2_Click">Diag 2</Button>
            </StackPanel>
            <StackPanel Grid.Row="6" Orientation="Horizontal">
                <Label Width="80" VerticalAlignment="Center" >Bend Down</Label>
                <Button Margin="4,0,0,0" Click="DwnX_Click">X</Button>
                <Button Margin="4,0,0,0" Click="DwnZ_Click">Z</Button>
                <Button Margin="4,0,0,0" Click="DwnXZ_Click">X+Z</Button>
                <Button Margin="4,0,0,0" Click="DwnDiag1_Click">Diag 1</Button>
                <Button Margin="4,0,0,0" Click="DwnDiag2_Click">Diag 2</Button>
            </StackPanel>
            <StackPanel Grid.Row="7" Orientation="Horizontal"></StackPanel>
            <StackPanel Grid.Row="9" Orientation="Horizontal"></StackPanel>
        </Grid>
        <Border x:Name="viewBorder" Grid.Row ="0" Grid.Column="1" Style="{StaticResource ControlBorder}" KeyDown="Grid_KeyDown" Focusable="True">
            <Viewport3D Name="viewport3D1"   MouseMove="Viewport_MouseMove"
              MouseDown="Viewport_MouseDown" MouseWheel="Viewport_MouseWheel" KeyDown="Grid_KeyDown" Focusable="True">

                <Viewport3D.Camera>
                    <PerspectiveCamera x:Name = "camMain" Position = "{Binding CameraPosition}" LookDirection = "{Binding LookDirection}">
                    </PerspectiveCamera>
                </Viewport3D.Camera>

                <ModelVisual3D>
                    <ModelVisual3D.Content>
                        <Model3DGroup>
                            <AmbientLight Color="#FF808080" />
                            <DirectionalLight x:Name = "dirLightMain" Direction = "-1,-1,-1" Color="White">
                            </DirectionalLight>
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>

                <ModelVisual3D x:Name = "MyModel">
                    <ModelVisual3D.Content>
                        <Model3DGroup x:Name="MyModelGroup">
                        </Model3DGroup>
                    </ModelVisual3D.Content>
                </ModelVisual3D>
            </Viewport3D>
        </Border>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <CheckBox Content="Floor" Grid.Column="0" IsChecked="{Binding ShowFloor}" />
            <CheckBox Content="Axies" Grid.Column="1" IsChecked="{Binding ShowAxies}" />
            <Button Content="Home" Grid.Column="2" Click="Home_Click" />
        </Grid>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="Cancel" Click="Cancel_Click" Margin="2,2,2,2" />
            <Button Grid.Column="2" Content="Ok" Click="Ok_Click"  Margin="2,2,2,2" />
        </Grid>
    </Grid>
</local:BaseModellerDialog>