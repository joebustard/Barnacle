<local:BaseModellerDialog
    x:Class="Barnacle.Dialogs.ImagePlaqueDlg"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Barnacle.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:u="clr-namespace:Barnacle.UserControls"
    xmlns:v="clr-namespace:Barnacle.UserControls.ObjectViewer"
    Title="Image Plaque"
    Width="1000"
    Height="550"
    Background="{StaticResource WindowBackBrush}"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <Border
            Grid.Row="0"
            Grid.Column="1"
            IsEnabled="{Binding EditingEnabled}"
            Style="{StaticResource ControlBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />
                    <RowDefinition Height="25" />

                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Label Width="100" VerticalAlignment="Center">Thickness</Label>
                    <TextBox
                        Width="150"
                        Margin="8,0,0,0"
                        Text="{Binding PlagueThickness}"
                        ToolTip="{Binding PlagueThicknessToolTip}" />

                    <Button
                        Margin="8,0,0,0"
                        Click="ResetDefaults"
                        Content="Reset"
                        ToolTip="Restore parameters to their defaults" />
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal">
                    <Label Width="100" VerticalAlignment="Center">Image Path</Label>
                    <TextBox
                        Width="150"
                        Margin="8,0,0,0"
                        Text="{Binding PlaqueImagePath}"
                        ToolTip="{Binding PlaqueImagePathToolTip}" />
                    <Button
                        Margin="8,0,0,0"
                        Click="BrowseImage_Click"
                        Content="..."
                        ToolTip="Browse for image" />
                </StackPanel>
                <StackPanel Grid.Row="3" Orientation="Horizontal">
                    <Label Width="100" VerticalAlignment="Center">Length</Label>
                    <TextBox
                        Width="80"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Text="{Binding SolidLength}" />
                    <CheckBox
                        Margin="16,0,0,0"
                        VerticalAlignment="Center"
                        Content="Gray Scale"
                        IsChecked="{Binding IsGrayScale}" />
                </StackPanel>
                <StackPanel Grid.Row="4" Orientation="Horizontal" Visibility="{Binding RunLengthVisibility}">
                    <CheckBox
                        VerticalAlignment="Center"
                        Content="Limit RunLengths To"
                        IsChecked="{Binding LimitRunLengths}" Visibility="{Binding RunLengthVisibility}" />
                    <TextBox
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Text="{Binding MaxRunLength}" Visibility="{Binding RunLengthVisibility}" />
                </StackPanel>
                <StackPanel Grid.Row="5" Orientation="Horizontal">
                    <Label
                        VerticalAlignment="Center"
                        Content="{Binding WarningText}"
                        FontSize="18"
                        Foreground="{StaticResource WarningColour}" />
                </StackPanel>
                <Image
                    Grid.Row="6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="{Binding PlaqueImage}" />
            </Grid>
        </Border>
        <GridSplitter
            Grid.Row="0"
            Grid.Column="2"
            Style="{StaticResource GridSplitterStyle}" />
        <v:ObjectView
            x:Name="Viewer"
            Grid.Row="0"
            Grid.Column="3" />
        <Grid Grid.Row="1" Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="1"
                Margin="2,2,2,2"
                Click="Cancel_Click"
                Content="Cancel"
                IsEnabled="{Binding EditingEnabled}" />
            <Button
                Grid.Column="2"
                Margin="2,2,2,2"
                Click="Ok_Click"
                Content="Ok"
                IsDefault="True"
                IsEnabled="{Binding EditingEnabled}" />
        </Grid>
    </Grid>
</local:BaseModellerDialog>