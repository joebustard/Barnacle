<local:BaseModellerDialog x:Class="Barnacle.Dialogs.TankDialog2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barnacle.Dialogs" xmlns:u="clr-namespace:Barnacle.UserControls.ObjectViewer" xmlns:ctrls="clr-namespace:Barnacle.UserControls"
                          mc:Ignorable="d"
        Title="Tank Track"     Width="1000"
    Height="550"
    Background="{StaticResource WindowBackBrush}" Loaded="BaseModellerDialog_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="8*" />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="10*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Border
    Grid.Row="0"
    Grid.Column="1"
    Style="{StaticResource ControlBorder}">

            <ctrls:FlexiPathEditorControl x:Name="PathEditor" />
        </Border>
        <GridSplitter    Grid.Row="0"    Grid.Column="2"    Style="{StaticResource GridSplitterStyle}" />
        <Grid Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="180" />
            </Grid.RowDefinitions>
            <u:ObjectView   x:Name="Viewer"   Grid.Row="0"  VerticalAlignment="Stretch" />
            <Border Grid.Row="1"  Style="{StaticResource ControlBorder}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                        <RowDefinition Height="25" />
                    </Grid.RowDefinitions>
                    <StackPanel
    Grid.Row="0"
    Margin="10,0,0,0"
    Orientation="Horizontal">
                        <Label Width="80" VerticalAlignment="Center">
                            Type
                        </Label>
                        <ComboBox
        MinWidth="100"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        ItemsSource="{Binding TrackTypes}"
        SelectedItem="{Binding SelectedTrackType}" />
                    </StackPanel>
                    <StackPanel
    Grid.Row="1"
    Margin="10,0,0,0"
    Orientation="Horizontal">
                        <Label Width="80" VerticalAlignment="Center">
                            No. Of Links
                        </Label>
                        <TextBox
        MinWidth="50"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        Text="{Binding NoOfLinks}" />
                    </StackPanel>
                    <StackPanel
    Grid.Row="2"
    Margin="10,0,0,0"
    Orientation="Horizontal">
                        <Label Width="80" VerticalAlignment="Center">
                            Width
                        </Label>
                        <TextBox
        MinWidth="50"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        Text="{Binding TrackWidth}" />
                    </StackPanel>
                    <StackPanel
    Grid.Row="3"
    Margin="10,0,0,0"
    Orientation="Horizontal">
                        <Label Width="80" VerticalAlignment="Center">
                            Thickness
                        </Label>
                        <TextBox
        MinWidth="50"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Center"
        Text="{Binding TrackThickness}" />
                    </StackPanel>

                    <StackPanel
Grid.Row="4"
Margin="10,0,0,0"
Orientation="Horizontal">
                        <Label Width="80" VerticalAlignment="Center">
                            Overlap %
                        </Label>
                        <TextBox
    MinWidth="50"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Center"
    Text="{Binding LinkOverlap}" />
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="1" Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Button
         Grid.Column="1"
         Margin="2,2,2,2"
         Click="Cancel_Click"
         Content="Cancel" />

            <Button
         Grid.Column="2"
         Margin="2,2,2,2"
         Click="Ok_Click"
         Content="Ok" />
        </Grid>
    </Grid>
</local:BaseModellerDialog>