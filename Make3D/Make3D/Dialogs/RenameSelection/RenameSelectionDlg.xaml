<Window x:Class="Barnacle.Dialogs.RenameSelection.RenameSelectionDlg"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Barnacle.Dialogs.RenameSelection"
        mc:Ignorable="d"
                WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Title="Rename Selected Items" Height="120" Width="400"
 Background="{StaticResource WindowBackBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="80" />
            <ColumnDefinition />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="30" />
            <RowDefinition Height="10" />
        </Grid.RowDefinitions>

        <Label VerticalAlignment="Center" Content="Name" Grid.Column="1" Grid.Row="1" />
        <TextBox Grid.Column="2" Grid.Row="1" Text="{Binding NewName}" Grid.ColumnSpan="2" />
        <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Center">

            <Button Content="Cancel" Click="CancelClicked" />

            <Button Content="OK" Click="OKClicked" Margin="16,0,0,0" />
        </StackPanel>
    </Grid>
</Window>