<Window x:Class="Barnacle.Dialogs.NewUserTemplate"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Barnacle.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Save Project As Template"
    Width="800"
    Height="450"
    Background="{StaticResource WindowBackBrush}"

    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />

            <RowDefinition />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Left"
            VerticalAlignment="Center" FontSize="18">
            New Template Name
        </Label>
        <TextBox
            Grid.Row="1"
            Grid.Column="2"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            FontSize="18"
            Text="{Binding TemplateName}" />

        <Label
            Grid.Row="3"
            Grid.Column="1"

            FontSize="18">
            Description
        </Label>
        <TextBox
            x:Name="DescriptionBox"
            Grid.Row="4"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="4,4,4,4"
            AcceptsReturn="True"
            FontSize="18"
            BorderThickness="4" Text="{Binding TemplateDescription}" VerticalContentAlignment="Top" />
        <Grid
            Grid.Row="6"
            Grid.Column="2"
            Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Margin="4,0,4,0"
                Click="Cancel_Click"
                Content="Cancel" />

            <Button
                x:Name="OK_Button"
                Grid.Column="1"
                Margin="4,0,4,0"
                Click="OK_Click"
                Content="OK"
                IsDefault="True" />
        </Grid>
    </Grid>
</Window>