                    <Button Click="ZoomOut_Click"
                            FontSize="16"
                            Grid.Column="2"
                            Margin="2,0,0,0"
                            Style="{StaticResource SmallButton}"
                            x:Name="ZoomOut">
                        -
                    </Button>
                    <Button Click="ZoomReset_Click"
                            FontSize="16"
                            Grid.Column="3"
                            Margin="2,0,0,0"
                            Style="{StaticResource SmallButton}"
                            x:Name="ZoomReset">
                        .
                    </Button>
                    <Button Click="ZoomIn_Click"
                            FontSize="16"
                            Grid.Column="4"
                            Margin="2,0,0,0"
                            Style="{StaticResource SmallButton}"
                            x:Name="ZoomIn">
                        +
                    </Button>
                    <CheckBox Grid.Column="5"
                              IsChecked="{Binding ShowOrtho}"
                              Margin="2,0,49.2,6"
