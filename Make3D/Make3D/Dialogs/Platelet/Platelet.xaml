<local:BaseModellerDialog
    x:Class="Barnacle.Dialogs.Platelet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ctrls="clr-namespace:Barnacle.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Barnacle.Dialogs"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Platelet"
    Width="800"
    Height="450"
    Background="{StaticResource WindowBackBrush}"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Border
            Grid.Row="0"
            Grid.Column="2"
            Style="{StaticResource ControlBorder}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition Height="30" />
                </Grid.RowDefinitions>
                <Viewport3D
                    Name="viewport3D1"
                    Grid.Row="0"
                    MouseDown="Viewport_MouseDown"
                    MouseMove="Viewport_MouseMove"
                    MouseWheel="Viewport_MouseWheel">

                    <Viewport3D.Camera>
                        <PerspectiveCamera
                            x:Name="camMain"
                            LookDirection="{Binding LookDirection}"
                            Position="{Binding CameraPosition}" />
                    </Viewport3D.Camera>

                    <ModelVisual3D>
                        <ModelVisual3D.Content>
                            <Model3DGroup>
                                <AmbientLight Color="#FF808080" />
                                <DirectionalLight
                                    x:Name="dirLightMain"
                                    Direction="-1,-1,-1"
                                    Color="White" />
                            </Model3DGroup>
                        </ModelVisual3D.Content>
                    </ModelVisual3D>

                    <ModelVisual3D x:Name="MyModel">
                        <ModelVisual3D.Content>
                            <Model3DGroup x:Name="MyModelGroup" />
                        </ModelVisual3D.Content>
                    </ModelVisual3D>
                </Viewport3D>

                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <Label VerticalAlignment="Center">
                        Width
                    </Label>
                    <TextBox
                        Width="100"
                        Margin="4,0,0,0"
                        VerticalContentAlignment="Center"
                        Text="{Binding PlateWidth, UpdateSourceTrigger=PropertyChanged}" />
                    <RadioButton
                        Margin="2,2,8,2"
                        VerticalAlignment="Center"
                        Content="Solid"
                        GroupName="HollowGroup"
                        IsChecked="{Binding SolidShape}" />
                    <RadioButton
                        Margin="2,2,10,2"
                        VerticalAlignment="Center"
                        Content="Hollow"
                        GroupName="HollowGroup"
                        IsChecked="{Binding HollowShape}" />
                    <RadioButton
                        Margin="2,2,10,2"
                        VerticalAlignment="Center"
                        Content="Textured"
                        GroupName="HollowGroup"
                        IsChecked="{Binding TexturedShape}" />
                    <StackPanel HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Visibility="{Binding ShowWidth}">
                        <Label VerticalAlignment="Center" Content="Wall" />

                        <TextBox
                            Width="80"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            Text="{Binding WallWidth, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Left" Margin="-130,0,0,0"
                        VerticalAlignment="Center"
                        Orientation="Horizontal"
                        Visibility="{Binding ShowTextures}">
                        <Label VerticalAlignment="Center" Content="Texture" />
                        <ComboBox
                            Width="100"
                            Margin="4,0,8,0"
                            VerticalContentAlignment="Center"
                            Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                            Visibility="{Binding ShowTextures}" />
                        <Label VerticalAlignment="Center" Content="Depth" />
                        <TextBox
                            Width="80"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center"
                            Text="{Binding TextureDepth, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Style="{StaticResource ControlBorder}">

            <ctrls:FlexiPathEditorControl x:Name="PathEditor" />
        </Border>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
        </Grid>
        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <CheckBox
                Grid.Column="0"
                VerticalAlignment="Center"
                Content="Floor"
                IsChecked="{Binding ShowFloor}" />
            <CheckBox
                Grid.Column="1"
                VerticalAlignment="Center"
                Content="Axies"
                IsChecked="{Binding ShowAxies}" />
            <Button
                Grid.Column="2"
                Click="Home_Click"
                Content="Home" />
        </Grid>
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="1"
                Margin="2,2,2,2"
                Click="Cancel_Click"
                Content="Cancel" />

            <Button
                Grid.Column="2"
                Margin="2,2,2,2"
                Click="Ok_Click"
                Content="Ok" />
        </Grid>
    </Grid>
</local:BaseModellerDialog>